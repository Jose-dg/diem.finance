{
  "info": {
    "name": "Dashboard API Collection",
    "description": "Colección de endpoints para la aplicación Dashboard de la plataforma Fintech",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json",
    "version": "1.0.0"
  },
  "auth": {
    "type": "bearer",
    "bearer": [
      {
        "key": "token",
        "value": "{{jwt_token}}",
        "type": "string"
      }
    ]
  },
  "variable": [
    {
      "key": "base_url",
      "value": "http://localhost:8000",
      "type": "string"
    },
    {
      "key": "jwt_token",
      "value": "",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "Autenticación",
      "item": [
        {
          "name": "Obtener Token JWT",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"username\": \"tu_usuario\",\n  \"password\": \"tu_password\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/token/",
              "host": ["{{base_url}}"],
              "path": ["api", "token", ""]
            },
            "description": "Obtener token JWT para autenticación. Copia el token del response y úsalo en la variable jwt_token"
          }
        },
        {
          "name": "Refresh Token",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"refresh\": \"{{refresh_token}}\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/token/refresh/",
              "host": ["{{base_url}}"],
              "path": ["api", "token", "refresh", ""]
            },
            "description": "Renovar token JWT usando refresh token"
          }
        }
      ]
    },
    {
      "name": "Créditos",
      "item": [
        {
          "name": "Obtener Créditos (GET)",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/dashboard/credits/?start_date=2024-01-01&end_date=2024-12-31&status=active&user=usuario",
              "host": ["{{base_url}}"],
              "path": ["dashboard", "credits", ""],
              "query": [
                {
                  "key": "start_date",
                  "value": "2024-01-01",
                  "description": "Fecha de inicio (YYYY-MM-DD)"
                },
                {
                  "key": "end_date",
                  "value": "2024-12-31",
                  "description": "Fecha de fin (YYYY-MM-DD)"
                },
                {
                  "key": "status",
                  "value": "active",
                  "description": "Estado del crédito (opcional)"
                },
                {
                  "key": "user",
                  "value": "usuario",
                  "description": "Filtrar por usuario (opcional)"
                },
                {
                  "key": "page",
                  "value": "1",
                  "description": "Número de página (opcional)"
                },
                {
                  "key": "page_size",
                  "value": "20",
                  "description": "Elementos por página (opcional, max 100)"
                }
              ]
            },
            "description": "Obtener lista de créditos con filtros opcionales. Requiere autenticación JWT."
          }
        },
        {
          "name": "Obtener Créditos (POST)",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"start_date\": \"2024-01-01\",\n  \"end_date\": \"2024-12-31\",\n  \"status\": \"active\",\n  \"user\": \"usuario\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/dashboard/credits/",
              "host": ["{{base_url}}"],
              "path": ["dashboard", "credits", ""]
            },
            "description": "Obtener lista de créditos enviando parámetros en el body. Requiere autenticación JWT."
          }
        },
        {
          "name": "Filtrar Créditos Avanzado",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"start_date\": \"2024-01-01\",\n  \"end_date\": \"2024-12-31\",\n  \"status\": \"active\",\n  \"user\": \"usuario\",\n  \"seller\": \"vendedor_id\",\n  \"subcategory\": \"subcategoria_id\",\n  \"currency\": \"COP\",\n  \"periodicity\": \"monthly\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/dashboard/credits/filter/",
              "host": ["{{base_url}}"],
              "path": ["dashboard", "credits", "filter", ""]
            },
            "description": "Filtrar créditos usando django-filter con múltiples criterios. Requiere autenticación JWT."
          }
        }
      ]
    },
    {
      "name": "Resumen Financiero",
      "item": [
        {
          "name": "Obtener Resumen Financiero",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"start_date\": \"2024-01-01\",\n  \"end_date\": \"2024-12-31\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/dashboard/data/",
              "host": ["{{base_url}}"],
              "path": ["dashboard", "data", ""]
            },
            "description": "Obtener resumen financiero comparativo entre periodo actual y anterior. Incluye ingresos, gastos, préstamos, cuentas por cobrar y ganancias."
          }
        }
      ]
    },
    {
      "name": "Gráficos",
      "item": [
        {
          "name": "Datos Gráfico Vendedores",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"range\": 90,\n  \"seller_id\": \"vendedor_id\",\n  \"subcategory_id\": \"subcategoria_id\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/dashboard/chart/sellers/",
              "host": ["{{base_url}}"],
              "path": ["dashboard", "chart", "sellers", ""]
            },
            "description": "Obtener datos para gráfico de vendedores. Parámetros opcionales: range (días, default 90), seller_id, subcategory_id"
          }
        },
        {
          "name": "Datos Gráfico Mensual",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"months\": 6,\n  \"seller_id\": \"vendedor_id\",\n  \"subcategory_id\": \"subcategoria_id\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/dashboard/chart/monthly/",
              "host": ["{{base_url}}"],
              "path": ["dashboard", "chart", "monthly", ""]
            },
            "description": "Obtener datos para gráfico mensual. Parámetros opcionales: months (meses, default 6), seller_id, subcategory_id"
          }
        }
      ]
    },
    {
      "name": "KPIs",
      "item": [
        {
          "name": "Resumen de KPIs de Créditos",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/dashboard/kpi/summary/?start_date=2024-01-01&end_date=2024-12-31",
              "host": ["{{base_url}}"],
              "path": ["dashboard", "kpi", "summary", ""],
              "query": [
                {
                  "key": "start_date",
                  "value": "2024-01-01",
                  "description": "Fecha de inicio (YYYY-MM-DD)"
                },
                {
                  "key": "end_date",
                  "value": "2024-12-31",
                  "description": "Fecha de fin (YYYY-MM-DD)"
                }
              ]
            },
            "description": "Obtener KPIs de créditos para el periodo especificado. Requiere autenticación JWT."
          }
        }
      ]
    }
  ],
  "event": [
    {
      "listen": "prerequest",
      "script": {
        "type": "text/javascript",
        "exec": [
          "// Script que se ejecuta antes de cada request",
          "console.log('Ejecutando request a: ' + pm.request.url);"
        ]
      }
    },
    {
      "listen": "test",
      "script": {
        "type": "text/javascript",
        "exec": [
          "// Script que se ejecuta después de cada request",
          "if (pm.response.code === 200) {",
          "    console.log('Request exitoso');",
          "} else {",
          "    console.log('Request falló con código: ' + pm.response.code);",
          "}"
        ]
      }
    }
  ]
}

